<%- include("include/_header.ejs") %>

        <!--Main-->
        <main id="site-main">
            <div class="button-box">
                <a href="/contacts" class="btn btn-light"><i class="fa-solid fa-user-plus"></i>연락처 목록</a>
            </div>
            <h2>연락처 추가</h2>
            <p>연락처 정보를 추가합니다</p>
            <form action="/contacts/add" method="POST" id="add-user">
                <div class="user-info">
                    <div class="col-12">
                        <label for="name" class="col-form-label">이름(Full name)</label>
                        <div>
                            <input type="text" class="form-control" name="name" id="name" placeholder="홍길동">
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="email" class="col-form-label">메일 주소(Email)</label>
                        <div>
                            <input type="text" class="form-control" name="email" id="email" placeholder="123@567">
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="phone" class="col-from-label">전화번호(Phone)</label>
                        <div>
                            <input type="text" class="form-control" name="phone" id="phone" placeholder="010-1234-5678">
                        </div>
                    </div>
                    <button type="submit">추가하기</button>
                </div>
            </form>

        <!--Main-->

<%- include("include/_footer.ejs") %>